@model WebUI.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Изменение пароля учетной записи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="header-wrapper">
    <nav class="navbar navbar-dark fixed-top bg-dark">
        @Html.ActionLink("ServiceDesk", "Index", "ServiceDesk", null, new { @class = "navbar-brand" })
    </nav>
</section>

<section id="loginForm" class="d-flex align-items-center min-vh-100 text-center h-auto">
    <div class="container">
        <h1 class="display-2 text-center text-white">Service Desk</h1>
        <hr class="my-3 bg-light">
        <h6 class="text-center my-3">Пожалуйста, заполните поля для изменения пароля учетной записи</h6>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="container text-left">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            @Html.HiddenFor(model=>model.AccountId)
            <div class="row justify-content-center align-items-center">
                <div class="col-8 my-1">
                    <div class="form-group">
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите старый пароль учетной записи", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row justify-content-center align-items-center">
                <div class="col-8 my-1">
                    <div class="form-group">
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите новый пароль учетной записи", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row justify-content-center align-items-center">
                <div class="col-8 my-1">
                    <div class="form-group">
                        @Html.EditorFor(model => model.RepeatNewPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите новый пароль учетной записи еще раз", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.RepeatNewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group col-12 text-center">
                <input type="submit" value="Сохранить новый пароль и продолжить работу в системе" class="btn btn-info" />
            </div>
        </div>
        }
    </div>

</section>

