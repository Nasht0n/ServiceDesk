@model WebUI.ViewModels.DashboardViewModel
@using WebUI.Models.Enum
@{
    ViewBag.Title = "Рабочий стол";
    Layout = "~/Views/Shared/Cerulean/_DashboardLayout.cshtml";
}

    <div class="container-fluid">
        <h2 class="display-4 text-center mt-3">Рабочий стол</h2>


        <div class="d-flex flex-row-reverse bd-highlight">
            <div class="p-2 bd-highlight"><a href="@Url.Action("Index","Dashboard",new { Area = "", lastMonth = true })" class="mx-3">В этом месяце</a></div>
            <div class="p-2 bd-highlight"><a href="@Url.Action("Index","Dashboard",new { Area = "" })" class="mx-3">За все время</a></div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-6 col-md-6 col-lg-4">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", IsClient = true})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-pencil-alt text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category text-b">Зарегистрировано</p>
                                        <p class="card-title">@Model.CountCreatedRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-6 col-lg-4">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Approval})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-clock text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category text-b">На согласовании</p>
                                        <p class="card-title">@Model.CountApprovalRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-6 col-lg-4">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Open})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-exclamation-circle text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">Для работы</p>
                                        <p class="card-title">@Model.CountExecutedRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-6 col-lg-4">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Done})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-check text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">Выполнено</p>
                                        <p class="card-title">@Model.CountCompletedRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-6 col-lg-4">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Archive})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-archive text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">Перенесены в архив</p>
                                        <p class="card-title">@Model.CountArchiveRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-6 col-md-6 col-lg-4">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.InWork })" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-inbox text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">Выполняются</p>
                                        <p class="card-title">@Model.CountInWorkRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>


