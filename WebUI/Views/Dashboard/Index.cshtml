        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-secondary">
                        <h4 class="card-title text-center">Последние заявки</h4>
                    </div>
                    <div class="card-body p-1">
                        @if (Model.LastRequests.Count == 0)
                        {
                            <p class="card-text m-3">Нет данных о заявках, относящихся к пользователю</p>
                        }
                        else
                        {
                            <div class="row">


                                @foreach (var item in Model.LastRequests)
                                {
                                    <div class="col-md-4 my-1">
                                        <div class="list-group list-group-horizontal h-100">
                                            <a href="@Url.Action("Details",@item.ServiceModel.Controller, new { Area = @item.ServiceModel.BranchModel.AreaName, id = @item.RequestId })"
                                               class="list-group-item list-group-item-action flex-column align-items-center">
                                                <div class="d-flex justify-content-between w-100">
                                                    <h5 class="mb-1">@item.Title</h5>
                                                    <small>@item.Date.ToShortDateString()</small>
                                                </div>
                                                <p class="mb-1">@item.Justification</p>
                                                <small>@item.SubdivisionModel.Shortname, @item.ClientModel.Fullname</small>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>