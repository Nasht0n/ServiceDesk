@model WebUI.ViewModels.DashboardViewModel
@using WebUI.Models.Enum
@{
    ViewBag.Title = "Рабочий стол";
    Layout = "~/Views/Shared/Cerulean/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="display-4 text-center mt-3">Рабочий стол</h2>


    <div class="d-flex flex-row-reverse bd-highlight">
        <div class="p-2 bd-highlight"><a href="@Url.Action("Index","Dashboard",new { Area = "", lastMonth = true })" class="mx-1">За текущий месяц</a></div>
        <div class="p-2 bd-highlight"><a href="@Url.Action("Index","Dashboard",new { Area = "" })" class="mx-1">Всего</a></div>
    </div>



    <div class="row mt-3">
        @if (Model.UserPermissions.AddRequest)
        {
            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests", "Dashboard", new { Area = "" })" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-pencil-alt text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category text-b">Ваши заявки</p>
                                        <p class="card-title">@Model.CountCreatedRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Closed})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-archive text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">Закрыто заявок</p>
                                        <p class="card-title">@Model.CountClosedRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }



        @if (Model.UserPermissions.ApprovalAllowed)
        {
            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Approval})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-clock text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category text-b">На согласовании</p>
                                        <p class="card-title">@Model.CountApprovalRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", approver = true})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-clock text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category text-b">Согласовано</p>
                                        <p class="card-title">@Model.CountAgreedRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (Model.UserPermissions.GetInWorkRequest)
        {
            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Approval})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-clock text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category text-b">На согласовании</p>
                                        <p class="card-title">@Model.CountApprovalRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", InWork = true})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-exclamation-circle text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">К выполнению</p>
                                        <p class="card-title">@Model.CountOpenRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.InWork })" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-inbox text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">Выполняются</p>
                                        <p class="card-title">@Model.CountInWorkRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-sm-4 col-md-4 col-lg-3">
                <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Done})" class="text-decoration-none">
                    <div class="card-stats card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="fa fa-check text-primary fa-4x ml-3"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">Выполнено</p>
                                        <p class="card-title">@Model.CountCompletedRequest</p>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }

        <div class="col-sm-4 col-md-4 col-lg-3">
            <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Archive})" class="text-decoration-none">
                <div class="card-stats card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <i class="fa fa-archive text-primary fa-4x ml-3"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    <p class="card-category">Архив</p>
                                    <p class="card-title">@Model.CountArchiveRequest</p>
                                    <p></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-secondary">
                    <h4 class="card-title text-center">Последние заявки</h4>
                </div>
                <div class="card-body p-1">
                    @if (Model.LastRequests.Count == 0)
                    {
                        <p class="card-text m-3">Нет данных о заявках, относящихся к пользователю</p>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var item in Model.LastRequests)
                            {
                                <div class="col-md-4 my-1">
                                    <div class="list-group list-group-horizontal h-100">
                                        <a href="@Url.Action("Details",@item.ServiceModel.Controller, new { Area = @item.ServiceModel.BranchModel.AreaName, id = @item.RequestId })"
                                           class="list-group-item list-group-item-action flex-column align-items-center">
                                            <div class="d-flex justify-content-between w-100">
                                                <h5 class="mb-1">@item.Title</h5>
                                                <small>@item.Date.ToShortDateString()</small>
                                            </div>
                                            <p class="mb-1">@item.Justification</p>
                                            <small>@item.SubdivisionModel.Shortname, @item.ClientModel.Fullname</small>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>



</div>