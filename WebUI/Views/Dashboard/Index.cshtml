@model WebUI.ViewModels.DashboardViewModel
@using WebUI.Models.Enum
@{
    ViewBag.Title = "Рабочий стол";
    Layout = "~/Views/Shared/Cerulean/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="display-4 text-center mt-3">Рабочий стол</h2>

    <div class="row mt-3">
        <div class="col-sm-6 col-md-6 col-lg-4">
            <a href="@Url.Action("Requests","Dashboard",new { Area = "", statusId = (int)RequestStatus.Open})" class="text-decoration-none">
                <div class="card-stats card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <i class="fa fa-folder-open text-primary fa-4x ml-3"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    <p class="card-category">Зарегистрировано</p>
                                    <p class="card-title">@Model.CountCreatedRequest</p>
                                    <p></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-4">
            <a href="@Url.Action("Requests","Dashboard",new { Area = "", status = (int)RequestStatus.InWork, client = false})" class="text-decoration-none">
                <div class="card-stats card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <i class="fa fa-folder-open text-warning fa-4x ml-3"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    <p class="card-category">Для работы</p>
                                    <p class="card-title">@Model.CountExecutedRequest</p>
                                    <p></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-4">
            <a href="@Url.Action("Requests","Dashboard",new { Area = "", status = (int)RequestStatus.Done})" class="text-decoration-none">
                <div class="card-stats card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <i class="fa fa-folder-open text-success fa-4x ml-3"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    <p class="card-category">Выполнено</p>
                                    <p class="card-title">@Model.CountCompletedRequest</p>
                                    <p></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>


    <div class="row">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-secondary">
                    <h4 class="card-title text-center">Статистика заявок системы</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr class="font-weight-bolder">
                                            <td>Тип заявки</td>
                                            <td class="text-right">Всего заявок</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var serviceStats in Model.StatsModel)
                                        {
                                            <tr>
                                                <td>@serviceStats.ServiceModel.Name</td>
                                                <td class="text-right">@serviceStats.Count</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-secondary">
                    <h4 class="card-title text-center">Последние заявки</h4>
                </div>
                <div class="card-body p-1">
                    <div class="row">
                        <div class="col-md-12">
                            @foreach (var item in Model.LastRequests)
                            {
                                <div class="list-group my-1">
                                    <a href="@Url.Action("Details",@item.ServiceModel.Controller, new { Area = @item.ServiceModel.BranchModel.AreaName, id = @item.RequestId })" class="list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">@item.Title</h5>
                                            <small>@item.Date.ToShortDateString()</small>
                                        </div>
                                        <p class="mb-1">@item.Justification</p>
                                        <small>@item.SubdivisionModel.Shortname, @item.ClientModel.Fullname</small>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>