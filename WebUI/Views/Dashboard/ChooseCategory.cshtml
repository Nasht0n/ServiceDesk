@model WebUI.ViewModels.Category.CategoriesListViewModel

@{
    ViewBag.Title = "Создание заявки";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="display-4 text-center text-dark mt-3 mb-5">Создание заявки</h2>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("ChooseBranch","Dashboard",null)">@Model.Categories.First().BranchModel.Fullname</a></li>
    <li class="breadcrumb-item active">Выберите категорию заявки</li>
</ol>


<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        <a href="@Url.Action("ChooseService","Dashboard",new { id = category.Id })" class="list-group-item list-group-item-action bg-secondary">
            @category.Name
        </a>
    }
</div>

