@model WebUI.ViewModels.FeedbackViewModel

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/Cerulean/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="display-4 text-center mt-3">Форма обратной связи</h2>


</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-12">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12 text-dark" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите ваше имя", autocomplete = "off" } })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12">
                    @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-12 text-dark" })
                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", placeholder = "Начните вводить ваше сообщение", @rows = 8 } })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-12">
                        <input type="submit" value="Отправить" class="btn btn-primary " />
                    </div>
                </div>
            </div>
        </div>
    }

</div>



