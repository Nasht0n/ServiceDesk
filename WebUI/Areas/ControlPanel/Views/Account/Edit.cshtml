@model WebUI.ViewModels.Account.AccountViewModel

@{
    ViewBag.Title = "Сотрудники";
    Layout = "~/Areas/ControlPanel/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-center text-dark display-4 my-3">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal footer">
        <h4 class="mt-3 text-dark">Данные сотрудника</h4>
        <hr class="mb-3" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeModel.Surname, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.EmployeeModel.Surname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите фамилию сотрудника", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.EmployeeModel.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeModel.Firstname, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.EmployeeModel.Firstname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите имя сотрудника", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.EmployeeModel.Firstname, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeModel.Patronymic, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.EmployeeModel.Patronymic, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите отчество сотрудника", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.EmployeeModel.Patronymic, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-8">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeModel.SubdivisionModel, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.DropDownListFor(model => model.EmployeeModel.SubdivisionId, new SelectList(ViewBag.Subdivisions, "Id", "Fullname"), htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeModel.Post, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.EmployeeModel.Post, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите должность сотрудника", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.EmployeeModel.Post, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeModel.Email, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.EmployeeModel.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите электронную почту", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.EmployeeModel.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeModel.Phone, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.EmployeeModel.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите телефон сотрудника", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.EmployeeModel.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(model => model.EmployeeModel.HeadOfUnit, new { @class = "custom-control-input text-dark" })
                    @Html.LabelFor(model => model.EmployeeModel.HeadOfUnit, htmlAttributes: new { @class = "custom-control-label text-dark" })
                    @Html.ValidationMessageFor(model => model.EmployeeModel.HeadOfUnit, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <h4 class="mt-3 text-dark">Учетная запись</h4>
        <hr class="mb-3" />

        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите логин пользователя", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-dark" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите пароль пользователя", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-12">
                <div class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(model => model.ChangePasswordOnNextEnter, new { @class = "custom-control-input text-dark" })
                    @Html.LabelFor(model => model.ChangePasswordOnNextEnter, htmlAttributes: new { @class = "custom-control-label text-dark" })
                    @Html.ValidationMessageFor(model => model.ChangePasswordOnNextEnter, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <h4 class="mt-3 text-dark">Права доступа</h4>
        <hr class="mb-3" />

        <div class="form-group">
            @for (int i = 0; i < Model.Permissions.Count; i++)
            {
                <div class="col-md-12">
                    <div class="custom-control custom-checkbox">
                        @Html.HiddenFor(model => Model.Permissions[i].Id)
                        @Html.CheckBoxFor(model => Model.Permissions[i].IsChecked, new { @class = "custom-control-input text-dark" })
                        @Html.LabelFor(model => Model.Permissions[i].IsChecked, htmlAttributes: new { @class = "custom-control-label text-dark" })
                        @Html.HiddenFor(model => Model.Permissions[i].Title)
                        @Html.HiddenFor(model => Model.Permissions[i].Name)
                        <span class="text-dark">@Model.Permissions[i].Name</span>
                        @Html.ValidationMessageFor(model => Model.Permissions[i].IsChecked, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать новую запись" class="btn btn-success" />
            </div>
        </div>
    </div>
}


