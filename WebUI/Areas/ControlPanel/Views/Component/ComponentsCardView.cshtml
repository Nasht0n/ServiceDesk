@model WebUI.ViewModels.ComponentModel.ComponentsListViewModel
@using WebUI.HtmlHelpers

@foreach (var item in Model.Components)
{
    <div class="card mb-1 bg-white box-shadow mt-1">
        <h4 class="card-title text-shadow-none text-dark ml-3 mt-3">@item.Name</h4>
        <div class="card-body mx-3 mb-3 p-0">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="@Url.Action("Edit","Component",new { Area="ControlPanel", id = item.Id })" class="btn btn-sm btn-secondary">Редактировать</a>
                </div>
                <small class="text-muted">
                    <a href="@Url.Action("Delete","Component",new { Area="ControlPanel", id = item.Id })" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash mr-1"></i>
                        Удалить
                    </a>
                </small>
            </div>
        </div>
    </div>
}

<div class="my-1">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { search = Model.Search, page = x }))
</div>
