@model WebUI.ViewModels.Employee.EmployeeViewModel

@{
    ViewBag.Title = "Сотрудники";
    Layout = "~/Areas/ControlPanel/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="text-center display-4 my-3 text-dark">@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 class="mt-5 text-dark">Регистрация нового сотрудника</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label text-dark" })
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите фамилию сотрудника", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label text-dark" })
                    @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите имя сотрудника", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.Patronymic, htmlAttributes: new { @class = "control-label text-dark" })
                    @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите отчество сотрудника", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Patronymic, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-8">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.SubdivisionModel, htmlAttributes: new { @class = "control-label  text-dark" })
                    @Html.DropDownListFor(model => model.SelectedSubdivision, Model.Subdivisions,"Выберите подразделение сотрудника", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.Post, htmlAttributes: new { @class = "control-label text-dark" })
                    @Html.EditorFor(model => model.Post, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите должность сотрудника", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Post, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label text-dark" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите электронную почту", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label text-dark" })
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите телефон сотрудника", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <div class="custom-control custom-checkbox">
                @Html.CheckBoxFor(model => model.HeadOfUnit, new { @class = "custom-control-input  text-dark" })
                @Html.LabelFor(model => model.HeadOfUnit, htmlAttributes: new { @class = "custom-control-label  text-dark" })
                @Html.ValidationMessageFor(model => model.HeadOfUnit, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Создать новую запись" class="btn btn-success" />
        </div>
    </div>
</div>
}
