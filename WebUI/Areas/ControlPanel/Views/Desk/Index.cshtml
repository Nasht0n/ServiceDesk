@model WebUI.Areas.ControlPanel.Data.ControlPanelViewModel

@{
    ViewBag.Title = "Панель управления";
    Layout = "~/Areas/ControlPanel/Views/Shared/_ControlPanelLayout.cshtml";
}

<h2 class="display-4 text-center text-dark mt-3 mb-3">@ViewBag.Title</h2>

<div class="row justify-content-md-center">
    <div class="col-md-8 justify-content-md-center">
        @using (Html.BeginForm("Index", "ControlPanel", new { search = Model.Search }, FormMethod.Get, new { @class = "input-group", role = "form" }))
        {
            @Html.TextBox("search", Model.Search as string, new { @class = "form-control", @placeholder = "Поиск", @autocomplete = "off" })
            <div class="input-group-append collapse">
                <input type="submit" value="Поиск" class="btn btn-info" />
            </div>
        }
    </div>
</div>

<div class="row m-5">
    <div class="col-sm-12 col-md-6 col-lg-4 text-center border">
        <a href="#" class="text-decoration-none text-dark">
            <i class="fa fa-building fa-3x"></i>
            <p class="mt-2">Подразделения</p>
        </a>
    </div>
   
</div>


