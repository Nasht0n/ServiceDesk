@model WebUI.ViewModels.Subdivision.SubdivisionsListViewModel
@using WebUI.HtmlHelpers

@foreach (var item in Model.Subdivisions)
{
    <div class="card mb-4 bg-white box-shadow mt-1">
        <h4 class="card-title text-shadow-none text-dark ml-3 mt-3">@item.Fullname</h4>
        <p class="card-subtitle mb-2 text-shadow-none text-muted text-dark ml-3">Сокращенное наименование: @item.Shortname</p>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="@Url.Action("SubdivisionExecutors","Subdivision", new { Area = "ControlPanel", id = item.Id })" class="btn btn-sm btn-warning">Список исполнителей</a>
                    <a href="@Url.Action("Edit","Subdivision",new { Area="ControlPanel", id = item.Id })" class="btn btn-sm btn-secondary">Редактировать</a>
                </div>
                <small class="text-muted">
                    <a href="@Url.Action("Delete","Subdivision",new { Area="ControlPanel", id = item.Id })" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash mr-1"></i>
                        Удалить
                    </a>
                </small>
            </div>
        </div>
    </div>
}

<div class="my-1">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Subdivisions", new { search = Model.Search, page = x }))
</div>