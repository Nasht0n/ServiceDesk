@model WebUI.ViewModels.Subdivision.SubdivisionViewModel

@{
    ViewBag.Title = "DeleteSubdivision";
    Layout = "~/Areas/Admin/Views/Shared/_cPanelLayout.cshtml";
}

    <h2 class="text-center display-4 my-3 text-white">Подразделения</h2>

<h3 class="mt-5">Вы уверены, что хотите удалить это подразделение?</h3>
<div>
    <div class="card my-3">
        <div class="card-body">
            <h4 class="card-title text-white">Наименование подразделения: @Model.Fullname</h4>
            <h6 class="card-subtitle mb-2 text-muted">Сокращенное наименование: @Model.Shortname</h6>
        </div>
    </div>   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить запись" class="btn btn-danger" /> 
            @Html.ActionLink("К списку подразделений", "Subdivisions", "Subdivision")
        </div>
    }
</div>
