@model WebUI.ViewModels.Subdivision.SubdivisionsListViewModel

@{
    ViewBag.Title = "Подразделения";
    Layout = "~/Areas/Admin/Views/Shared/_cPanelLayout.cshtml";
}

<h2 class="text-center display-4 my-3 text-white">Подразделения</h2>

<div class="d-flex mt-3">
    <div class="flex-grow-1">
        @Html.ActionLink("Добавить подразделение", "AddSubdivision", null, new { @class = "btn btn-success" })
    </div>
    <div>
        @using (Html.BeginForm("Subdivisions", "Subdivision", new { search = Model.Search }, FormMethod.Get, new { @class = "input-group", role = "form" }))
        {
            @Html.TextBox("search", Model.Search as string, new { @class = "form-control", @placeholder = "Поиск подразделения", @autocomplete = "off" })
            <div class="input-group-append">
                <input type="submit" value="Поиск" class="btn btn-info" />
            </div>
        }
    </div>
</div>

@Html.Partial("SubdivisionsCardView")



