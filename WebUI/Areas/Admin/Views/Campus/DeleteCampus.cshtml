@model WebUI.ViewModels.Campus.CampusViewModel

@{
    ViewBag.Title = "Удаление учебного корпуса";
    Layout = "~/Areas/Admin/Views/Shared/_cPanelLayout.cshtml";
}

<h2 class="text-center text-white display-4 my-3">Учебные корпуса</h2>
<h3 class="mt-5">Вы уверены, что хотите удалить запись об учебном корпусе?</h3>
<div>
    <div class="card my-3">
        <div class="card-body">
            <h4 class="card-title text-white">Наименование учебного корпуса: @Model.Name</h4>            
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить запись" class="btn btn-danger" />
            @Html.ActionLink("К списку учебного корпуса", "Campuses", "Campus")
        </div>
    }
</div>