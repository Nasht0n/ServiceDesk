@model WebUI.ViewModels.Employee.EmployeesListViewModel

@{
    ViewBag.Title = "Сотрудники";
    Layout = "~/Areas/Admin/Views/Shared/_cPanelLayout.cshtml";
}

<h2 class="text-center display-4 my-3 text-white">Сотрудники</h2>
<div class="d-flex flex-row justify-content-between">
    <div class="flex-fill align-self-center">
        @Html.ActionLink("Новый сотрудник", "AddEmployee", null, new { @class = "btn btn-success" })
    </div>
    <div class="flex-fill align-self-center">
        @using (Html.BeginForm("Employees", "Employee", new { search = Model.Search, subdivision = Model.SubdivisionId }, FormMethod.Get, new { @class = "input-group", role = "form" }))
        {
            @Html.DropDownList("subdivision", new SelectList(ViewBag.Subdivisions, "Id", "Fullname"), htmlAttributes: new { @class = "form-control ml-1" })
            @Html.TextBox("search", Model.Search as string, new { @class = "form-control ml-1", @placeholder = "Поиск сотрудника", @autocomplete = "off" })
            <div class="input-group-append">
                <input type="submit" value="Поиск" class="btn btn-info" />
            </div>
        }
    </div>
</div>
@Html.Partial("EmployeesCardView")
