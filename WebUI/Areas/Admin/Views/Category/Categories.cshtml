@model WebUI.ViewModels.Category.CategoriesListViewModel

@{
    ViewBag.Title = "Категории заявки";
    Layout = "~/Areas/Admin/Views/Shared/_cPanelLayout.cshtml";
}

<h2 class="text-center display-4 my-3 text-white">Категории заявки</h2>
<div class="d-flex">
    <div class="align-self-center">
        @Html.ActionLink("Новая запись", "AddCategory", null, new { @class = "btn btn-success" })
    </div>
    <div class="flex-grow-1 align-self-center">
        @using (Html.BeginForm("Categories", "Category", new { search = Model.Search, branch = Model.BranchId }, FormMethod.Get, new { @class = "input-group", role = "form" }))
        {
            @Html.DropDownList("branch", new SelectList(ViewBag.Branches, "Id", "Name"), htmlAttributes: new { @class = "form-control ml-1" })
            @Html.TextBox("search", Model.Search as string, new { @class = "form-control ml-1", @placeholder = "Поиск категории заявки", @autocomplete = "off" })
            <div class="input-group-append">
                <input type="submit" value="Поиск" class="btn btn-info" />
            </div>
        }
    </div>
</div>
@Html.Partial("CategoriesCardView")

