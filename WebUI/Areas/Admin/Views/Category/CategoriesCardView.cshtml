@model WebUI.ViewModels.Category.CategoriesListViewModel
@using WebUI.HtmlHelpers

@foreach (var item in Model.Categories)
{
    <div class="card mt-1">
        <div class="card-body">
            <h4 class="card-title text-white">Наименование категории заявки: @item.Name</h4>
            <h6 class="card-subtitle mb-2 text-muted">Отрасль заявки: @item.BranchModel.Name</h6>

            <a href="@Url.Action("EditCategory","Category",new { id = item.Id })" class="card-link">
                <i class="fa fa-edit"></i>
                <span class="ml-1">Редактировать</span>
            </a>
            <a href="@Url.Action("DeleteCategory","Category",new { id = item.Id })" class="card-link text-danger">
                <i class="fa fa-trash"></i>
                <span class="ml-1">Удалить</span>
            </a>
        </div>
    </div>
}

<div class="my-1">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Categories", new { search = Model.Search, branch = Model.BranchId, page = x }))
</div>
