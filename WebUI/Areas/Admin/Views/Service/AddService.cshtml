@model WebUI.ViewModels.Service.ServiceViewModel

@{
    ViewBag.Title = "Регистрация нового вида работы";
    Layout = "~/Areas/Admin/Views/Shared/_cPanelLayout.cshtml";
}

<h2 class="text-center text-white display-4 my-3">Виды работы</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="d-flex justify-content-between mt-5">
        <div class="align-self-center">
            <h4>Регистрация нового вида работы</h4>
        </div>
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-12">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryModel.BranchModel, htmlAttributes: new { @class = "control-label darkblue" })
                    @Html.DropDownListFor(model => model.CategoryModel.BranchId, new SelectList(ViewBag.Branches, "Id", "Name", "Выберите отрасль заявки"), htmlAttributes: new { @class = "form-control", id = "branch" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="col-auto">
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryModel, htmlAttributes: new { @class = "control-label darkblue" })
                    @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name", "Выберите категорию заявки"), htmlAttributes: new { @class = "form-control", id = "category" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Создать новую запись" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("К списку категории заявок", "Categories", "Category")
</div>


