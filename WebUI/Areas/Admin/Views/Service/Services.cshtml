@model WebUI.ViewModels.Service.ServicesListViewModel

@{
    ViewBag.Title = "Виды работ";
    Layout = "~/Areas/Admin/Views/Shared/_cPanelLayout.cshtml";
}

<h2 class="text-center display-4 my-3 text-white">Виды работ</h2>
<div class="d-flex">
    <div class="align-self-center">
        @Html.ActionLink("Новая запись", "AddService", null, new { @class = "btn btn-success" })
    </div>
    <div class="flex-grow-1 align-self-center">
        @using (Html.BeginForm("Services", "Service", new { search = Model.Search, branch=Model.BranchId, category = Model.CategoryId }, FormMethod.Get, new { @class = "input-group", role = "form" }))
        {
            @Html.DropDownList("branch", new SelectList(ViewBag.Branches, "Id", "Name", Model.BranchId), htmlAttributes: new { @class = "form-control ml-1" })
            @Html.DropDownList("category", new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId), htmlAttributes: new { @class = "form-control ml-1" })
            @Html.TextBox("search", Model.Search as string, new { @class = "form-control ml-1", @placeholder = "Поиск вида работы", @autocomplete = "off" })
            <div class="input-group-append">
                <input type="submit" value="Поиск" class="btn btn-info" />
            </div>
        }
    </div>
</div>
@Html.Partial("ServicesCardView")
