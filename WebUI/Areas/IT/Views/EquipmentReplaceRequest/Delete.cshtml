@model WebUI.ViewModels.Requests.IT.Equipments.EquipmentReplaceRequestViewModel

@{
    ViewBag.Title = "Заявка на замену оборудования";
    Layout = "~/Views/Shared/Cerulean/_DashboardLayout.cshtml";
}

<h2 class="display-4 text-center text-dark mt-3 mb-3">@ViewBag.Title</h2>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("ChooseBranch","Dashboard",new { Area = "" })">@Model.ServiceModel.BranchModel.Fullname</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ChooseCategory","Dashboard", new { Area = "", id = Model.ServiceModel.CategoryModel.Id })">@Model.ServiceModel.CategoryModel.Name</a>
    </li>
    <li class="breadcrumb-item">
        <span class="text-primary">@Model.ServiceModel.Name</span>
    </li>
    <li class="breadcrumb-item active">Удаление заявки</li>
</ol>


<div class="container">
    <h3 class="text-dark">Вы уверены, что хотите удалить заявку?</h3>
    <hr />
    <dl class="dl-horizontal text-dark">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.SubdivisionModel.Fullname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubdivisionModel.Fullname)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Justification)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Justification)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CampusModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CampusModel.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить запись" class="btn btn-danger" />
            @Html.ActionLink("Вернуться к списку заявок", "Requests", "Dashboard", new { Area = "" }, new { @class = "btn  btn-outline-primary" })
        </div>
    }
</div>
